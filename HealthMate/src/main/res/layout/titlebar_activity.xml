<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1" 
    android:background="@color/White">

<!--
        style="@style/adnoteScreenTitle"-->

    <LinearLayout
    	android:id="@+id/ll_profileheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/adnoteScreenTitle"
        android:orientation="horizontal"
        android:weightSum="1" >

        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >
        <ImageView
            android:id="@+id/iv_appicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:background="@drawable/hm_logo_green"/>
        </LinearLayout>

        <LinearLayout 
            android:id="@+id/ll_profilename"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".6"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" 
            >

        <com.cresco.HealthMate.CrescoTextView
            android:id="@+id/tv_profilename"
            style="@style/CrescoTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center" />
        </LinearLayout>

        

        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/ll_delete">
        
            <!-- 
            android:paddingBottom="5dp"
            android:paddingTop="5dp"  -->
        
        <ImageView
            android:id="@+id/iv_profileimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"/>
        
        <com.cresco.HealthMate.CrescoTextView
            style="@style/CrescoTextView_button1"
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:paddingTop="5dp"
            android:gravity="left|bottom"
            android:visibility="gone"
            />
        </LinearLayout>
        
       
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_linBase"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
    </LinearLayout>


